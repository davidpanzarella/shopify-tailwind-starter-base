{% schema %}
{
  "name": "Swiper Product List",
  "class": "swiper-product-list",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "title",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "label": "Product Collection",
      "id": "product_collection",
      "info": "Select the collection from which to display products."
    },
    {
      "type": "range",
      "label": "Number of Products",
      "id": "num_products",
      "default": 5,
      "min": 5,
      "max": 20,
      "step": 1
    },
    {
      "type": "checkbox",
      "label": "Show Secondary Image",
      "id": "show_secondary_image",
      "default": true
    },
    {
      "type": "text",
      "label": "Slides Per View (Desktop)",
      "id": "slides_per_view_desktop",
      "default": "4",
      "info": "The number of slides to display on desktop devices."
    },
    {
      "type": "range",
      "label": "Space Between Slides",
      "id": "space_between",
      "default": 16,
      "min": 0,
      "max": 48,
      "step": 8,
      "info": "The space (in pixels) between slides."
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Products",
      "name": "Swiper Product List",
      "settings": {
        "title": "Featured Products",
        "product_collection": "",
        "num_products": 6,
        "show_secondary_image": true,
        "slides_per_view_desktop": "4",
        "space_between": 16
      }
    }
  ]
}
{% endschema %}

{% render 'swiper-product', section: section %}

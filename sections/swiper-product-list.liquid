{% schema %}
{
  "name": "Swiper Product List",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "title",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "label": "Product Collection",
      "id": "product_collection",
      "info": "Select the collection from which to display products."
    },
    {
      "type": "checkbox",
      "label": "Show Sale Products",
      "id": "show_sale_products",
      "default": false
    },
    {
      "type": "checkbox",
      "label": "Show New Products",
      "id": "show_new_products",
      "default": true
    },
    {
      "type": "range",
      "label": "Number of Products",
      "id": "num_products",
      "default": 6,
      "min": 1,
      "max": 10,
      "step": 1
    },
    {
      "type": "text",
      "label": "Slides Per View (Mobile)",
      "id": "slides_per_view_mobile",
      "default": "1",
      "info": "The number of slides to display on mobile devices."
    },
    {
      "type": "text",
      "label": "Slides Per View (Desktop)",
      "id": "slides_per_view_desktop",
      "default": "3",
      "info": "The number of slides to display on desktop devices."
    },
    {
      "type": "range",
      "label": "Space Between Slides",
      "id": "space_between",
      "default": 20,
      "min": 0,
      "max": 50,
      "step": 5,
      "info": "The space (in pixels) between slides."
    }
  ],
  "presets": [
    {
      "category": "Products",
      "name": "Swiper Product List",
      "settings": {
        "title": "Featured Products",
        "product_collection": "",
        "show_sale_products": false,
        "show_new_products": true,
        "num_products": 6,
        "slides_per_view_mobile": "1",
        "slides_per_view_desktop": "3",
        "space_between": 20
      }
    }
  ]
}
{% endschema %}

{%- assign product_collection = section.settings.product_collection | default: collections.all -%}
{%- assign products = product_collection.products | slice: 0, section.settings.num_products -%}

<script>
  console.log("product_collection:", {{ products | json }});
  console.log("products:", {{ products | json }});
</script>

{%- if products.size > 0 -%}
  <section class='swiper-product-list'>
    <h2>{{ section.settings.title }}</h2>
    <div
      class='swiper-container'
      data-slides-per-view-mobile='{{ section.settings.slides_per_view_mobile }}'
      data-slides-per-view-desktop='{{ section.settings.slides_per_view_desktop }}'
      data-space-between='{{ section.settings.space_between }}'
    >
      <div class='swiper-wrapper'>
        {%- for product in products -%}
          <div class='swiper-slide'>
            <a href='{{ product.url }}' class='product-link'>
              <div class='product-image'>
                <img
                  src='{{ product.featured_image.src | image_url: 'master' }}'
                  alt='{{ product.featured_image.alt }}'
                  loading='eager'
                  width='{{ product.featured_image.width }}'
                  height='{{ product.featured_image.height }}'
                >
              </div>
              <div class='product-title'>{{ product.title }}</div>
              <div class='product-price'>{{ product.price | money }}</div>
            </a>
          </div>
        {%- endfor -%}
      </div>
      <div class='swiper-button-next'></div>
      <div class='swiper-button-prev'></div>
    </div>
  </section>

  <script>
    var swiper = new Swiper('.swiper-container', {
      slidesPerView: 'auto',
      spaceBetween: parseInt(document.querySelector('.swiper-container').dataset.spaceBetween),
      loop: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        768: {
          slidesPerView: parseInt(document.querySelector('.swiper-container').dataset.slidesPerViewDesktop),
        },
        0: {
          slidesPerView: parseInt(document.querySelector('.swiper-container').dataset.slidesPerViewMobile),
        },
      },
    });
  </script>
{%- endif -%}
